<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginLeft="15dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/image_author_bbs_face"
        fresco:placeholderImage="@mipmap/umeng_comm_female"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:fadeDuration="1000"
        fresco:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/text_nick_name"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者昵称"
        android:textColor="@color/color_black"
        android:layout_toRightOf="@id/image_author_bbs_face"/>
    <TextView
        android:id="@id/text_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_nick_name"
        android:layout_alignLeft="@id/text_nick_name"
        android:text="19小时前"
        android:layout_alignBottom="@id/image_author_bbs_face"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:id="@+id/layout_add_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_attention"/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加关注"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/text_bbs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:text="帖子标题"
        android:layout_below="@id/layout_add_attention"
        android:layout_marginTop="10dp"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_bbs_item"
        android:layout_below="@id/text_bbs_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        fresco:placeholderImage="@mipmap/umeng_comm_not_found"
        fresco:placeholderImageScaleType="centerCrop"
        android:layout_marginTop="10dp"
        />


    <RelativeLayout
        android:layout_below="@id/image_bbs_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/relativeLayout_recycler_bottom">
        <TextView
            android:id="@+id/text_linked_to_bbs"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_linked_to_bbs"
            android:textColor="@color/dark_blue"
            />
        <TextView
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@id/text_comment_count"
            android:text="0"/>
        <ImageView
            android:id="@id/image_comment"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/text_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/comment_hui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/text_looked_count"
            android:layout_marginRight="20dp"
            android:text="385"
            android:layout_toLeftOf="@id/image_comment"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/text_looked_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/looked_hui"/>
    </RelativeLayout>
    <include
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/relativeLayout_recycler_bottom"
        layout="@layout/view_divider_main_recycler"/>
</RelativeLayout>