<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/image_preview"
        android:layout_width="80dp"
        android:layout_height="60dp"
        fresco:placeholderImage="@mipmap/umeng_comm_not_found"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:fadeDuration="1000"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@id/text_bbs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/article_title"
        android:text="文章标题"
        android:layout_toLeftOf="@id/image_preview"
        android:layout_marginEnd="15dp"/>
    <RelativeLayout
        android:layout_alignBottom="@id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/text_comment_count"
            android:layout_toEndOf="@id/image_comment"
            android:text="0"
            android:layout_marginStart="3dp"/>
        <ImageView
            android:id="@id/image_comment"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_toRightOf="@id/text_collection_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/comment_hui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/text_looked_count"
            android:text="385"
            android:layout_toRightOf="@id/image_eye"
            android:layout_marginStart="3dp"/>
        <ImageView
            android:id="@id/image_eye"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/looked_hui"/>
        <ImageView
            android:id="@id/image_collection"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_looked_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/collection"
            android:layout_marginStart="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/text_collection_count"
            android:text="18"
            android:layout_toRightOf="@id/image_collection"
            android:layout_marginStart="3dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_devide"
        android:layout_below="@id/image_preview"
        android:layout_marginTop="10dp"/>

</RelativeLayout>