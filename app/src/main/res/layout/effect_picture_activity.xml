<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@id/design_discharge_room_activity_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_new_back_nor" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TabLayout
                android:id="@id/design_discharge_room_activity_tablayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/material_green"
                app:tabIndicatorHeight="3dp"
                app:tabSelectedTextColor="@color/material_green"
                app:tabTextColor="@color/color_black">

            </android.support.design.widget.TabLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/design_discharge_room_activity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>