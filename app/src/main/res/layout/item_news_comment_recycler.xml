<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@id/image_user_face"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@mipmap/umeng_comm_female"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:fadeDuration="1000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户昵称"
        android:id="@id/text_nick_name"
        android:layout_toRightOf="@id/image_user_face"
        android:layout_marginStart="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/text_comment_content"
        android:layout_below="@id/image_user_face"
        android:layout_alignLeft="@id/text_nick_name"
        android:textColor="@color/color_black"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/text_publish_time"
        android:text="02-02"
        android:layout_alignParentRight="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#515658"
        android:layout_below="@id/text_comment_content"
        android:layout_marginTop="15dp"/>
</RelativeLayout>