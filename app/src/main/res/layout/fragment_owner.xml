<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@id/P_owner_title_search_img"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:src="@mipmap/search_new"
            android:layout_marginLeft="15dp"/>

        <android.support.design.widget.TabLayout
            android:id="@id/P_ownner_tabLayout_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tablelayout_height"
            app:tabBackground="@color/windowBackground"
            app:tabIndicatorColor="@color/P_tabIndicatorColor"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/P_tabSelectedTextColor"
            app:tabTextColor="@color/P_tabTextColor" />

        <View
            android:id="@id/P_owner_cream_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/P_owner_title_view"/>
        
        <android.support.v4.view.ViewPager
            android:id="@id/P_owner_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior = "@string/P_appbar_scrolling_view_behavior">
        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>