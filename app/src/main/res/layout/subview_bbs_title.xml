<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp">
    <TextView
        android:id="@id/text_bbs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帖子标题"
        style="@style/article_title"/>
    <TextView
        android:id="@id/text_linked_to_bbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_linked_to_bbs"
        android:textColor="@color/color_linked"
        android:layout_below="@id/text_bbs_title"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@id/text_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6小时前"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/text_linked_to_bbs"/>
</RelativeLayout>