<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@id/fitment_team_title_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/material_green"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/material_green"
        app:tabTextColor="@color/color_black"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/fitment_team_title_viewpgaer"
        android:layout_width="match_parent"
        android:background="@color/account_line"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>