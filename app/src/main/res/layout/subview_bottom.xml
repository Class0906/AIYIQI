<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">
    <ImageView
        android:id="@id/image_article_share"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@mipmap/article_share"
        android:padding="16dp"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@id/image_article_collect"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@mipmap/article_uncollect"
        android:padding="16dp"
        android:layout_toLeftOf="@id/image_article_share"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@id/image_article_like"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:src="@mipmap/ic_zan_normol"
        android:padding="16dp"
        android:layout_toLeftOf="@id/image_article_collect"
        android:layout_marginRight="13dp"/>

    <TextView
        android:id="@id/text_bbs_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回帖"
        android:layout_toLeftOf="@id/image_article_like"
        android:textSize="16sp"
        android:background="@drawable/shape_edit_bg_bbs"
        android:paddingLeft="15dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_black"
        />
</RelativeLayout>