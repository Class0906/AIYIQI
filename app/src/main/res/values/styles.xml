<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="header_title">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="article_title">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_paragraph">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="text_tag">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/little_gray</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="text_share_btn">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="style_text_comment">
        <item name="android:textColor">#393c3e</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:maxHeight">15.0dip</item>
        <item name="android:minHeight">15.0dip</item>
        <item name="android:progressDrawable">@drawable/llb_style_ratingbar_drawable</item>
    </style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/in_lefttoright</item>
        <item name="android:windowExitAnimation">@anim/out_righttoleft</item>

    </style>
</resources>
